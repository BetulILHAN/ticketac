<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <!-- Bootstrap core CSS-->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
  <!--CSS-->
  <link href="stylesheets/style.css" rel="stylesheet">
</head>

<body>

  <div id="body" class="container-fluid justify-content-center">

    <!-- div header -->
    <div>
      <%- include('header') %>
    </div>

    <!-- div principale -->
    <div class="row">

      <!--<div id="orders">-->

      <div class="col-10">
        <h4 class="offset-2">My last trips :</h4>

        <table class="table table-light table-hover table-borderless">
          <thead>
            <tr>
              <th scope="col">Date</th>
              <th scope="col">Journey</th>
              <th scope="col">Departure time</th>
              <th scope="col">Price</th>
            </tr>
          </thead>

          <tbody>
            <% for (var i=0; i<panier.length;i++){%>
              <tr>
                <td>
                  <%=dateFormat(panier[i].date)%>
                </td>
                <td>
                  <%=panier[i].departure%> / <%=panier[i].arrival%>
                </td>
                <td>
                  <%=panier[i].departureTime%>
                </td>
                <td>
                  <%=Number(panier[i].price) %>â‚¬
                </td>
              </tr>
              <%}%>
          </tbody>
        </table>

        <div class="float-right">
          <a href="/homepage"><button type="button" class="btn btn-danger">Home</button></a>
        </div>

      </div>

      <!--/div id orders-->

      <!-- /div principale row -->
    </div>

    <!-- div footer -->
    <div>
      <%- include('footer') %>
    </div>

    <!-- /div container-fluid -->
  </div>

  <!-- Bootstrap-->
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
  <!-- jquery-->
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>

</body>

</html>