<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <!-- Bootstrap core CSS-->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
  <!--CSS-->
  <link href="stylesheets/style.css" rel="stylesheet">
</head>

<body>

  <div id="body" class="container-fluid justify-content-center">

    <!-- div header -->
    <div>
      <%- include('header') %>
    </div>

    <!-- div principale -->
    <div class="row-travels col-12 col-md-8">

      <!--div id="travels"-->
     
        <% for (var i=0; i<searchJourney.length ; i++){%>
          <h4 class="text-light offset-1 mt-3">Tickets available on <%=dateFormat(searchJourney[i].date)%> :</h4>
          
          <div class="card card-inline">
            <div class="card-body d-flex justify-content-between align-items-center">
              <h5 class="card-title"><%=searchJourney[i].departure%>/<%=searchJourney[i].arrival%></h5>
                <p class="card-text"> train departure at : <%=searchJourney[i].departureTime%></p>
                <p class="card-text"><%=searchJourney[i].price%>â‚¬</p>
                <a href="/orders?id=<%=searchJourney[i]._id%>" class="btn btn-danger">OK</a>
            </div>
          </div>
        <%}%>
     

    <!-- /div principale row -->
    </div>

    <!-- div footer -->
    <div>
      <%- include('footer') %>
    </div>

  <!-- /div container-fluid -->
  </div>

  <!-- Bootstrap-->
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
  <!-- jquery-->
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>

</body>
</html>