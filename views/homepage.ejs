<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <!-- Bootstrap core CSS-->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
  <!--CSS-->
  <link href="stylesheets/style.css" rel="stylesheet">
</head>

<body>

  <div id="body" class="container-fluid display-flex justify-content-center">

     <!-- div header -->
     <div>
      <%- include('header') %>
      </div>  

      <!-- div principale -->
      <div class="row">

        <!-- <div class="homepage col-12 "> -->
        <div id="row-homepage" class="col-12">
          <h4 class="offset-1 text-light">One-way ticket :</h4>

          <form action="/go" method="post" class="form-inline mt-3">
            <div class="col-auto">
              <label for="inputdeparture"> </label>
              <input type="text" name="inputdeparture" class="form-control" id="inputdeparture"
                placeholder="From: Paris, Marseille..">
            </div>

            <div class="col-auto">
              <label for="inputdestination"></label>
              <input type="text" name="inputdestination" class="form-control" id="inputdestination"
                placeholder="To: Lille, Nantes...">
            </div>

            <div class="col-auto">
              <label for="inputdate"></label>
              <input type="date" name="inputdate" class="form-control" id="inputdate" placeholder="choose date">
            </div>

            <div class="col-auto">
              <button type="submit" class="btn btn-danger ">Go</button>
            </div>
          </form>
          <!-- </div> -->

          <img id="landmark" src="./images/landmark.png" class="img-fluid mx-auto d-block">

        </div>

      <!-- /div principale row -->
      </div>

  <!-- div footer -->
  <div>
    <%- include('footer') %>
  </div>

  <!-- /div container-fluid -->
</div>

  <!-- Bootstrap-->
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
  <!-- jquery-->
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>

</body>

</html>